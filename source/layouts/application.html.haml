%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Rugged Tree Woodworking"

    %link{rel:"stylesheet", href:"/assets/vendor/stylesheets/jquery-ui.min.css", type:"text/css", media:"screen"}
    = stylesheet_link_tag "application"

